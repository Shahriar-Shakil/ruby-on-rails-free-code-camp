<% content_for :title, "Editing friend" %>

<h1>Editing friend</h1>

<%= render "form", friend: @friend %>

<br>

<div class="d-flex align-items-center">
  <%= link_to "Show this friend", @friend, class: "btn btn-secondary" %> |
  <%= link_to "Back to friends", friends_path, class: "btn btn-dark" %> |
  <%= button_to "Delete", @friend, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn  btn-danger" %>

</div>
